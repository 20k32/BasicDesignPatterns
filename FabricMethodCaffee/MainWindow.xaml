<Window x:Class="FabricMethodCaffee.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FabricMethodCaffee"
        mc:Ignorable="d"
        Title="MainWindow" WindowStartupLocation="CenterScreen" 
        FontFamily="JetBrains Mono" 
        FontSize="16"
        Width="1400"
        Height="1000"
        ResizeMode="NoResize">

    <StackPanel Orientation="Vertical" Width="900" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image x:Name="SubmarineImage" MaxWidth="300" Margin="0, 0, 10, 10" Stretch="Uniform"/>
            <TextBox x:Name="SubmarineTextBox" TextWrapping="Wrap" MinHeight="300" MinWidth="300" Margin="0, 0, 0, 10"/>
        </StackPanel>
        
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" MinWidth="300">
            <ComboBox x:Name="SternComboBox" SelectedIndex="0" HorizontalContentAlignment="Center">
                <ComboBoxItem Content="Ligth Stern"/>
                <ComboBoxItem Content="Middle Stern"/>
                <ComboBoxItem Content="Heavy Stern"/>
            </ComboBox>
            <Button x:Name="AddSternButton" Content="Add Stern" Margin="0, 10, 0, 0" Click="AddSternButton_Click"/>

            <ComboBox x:Name="EngineComboBox" SelectedIndex="0" HorizontalContentAlignment="Center" Margin="0, 10, 0, 0">
                <ComboBoxItem Content="Light Engine"/>
                <ComboBoxItem Content="Middle Engine"/>
                <ComboBoxItem Content="Heavy Engine"/>
            </ComboBox>

            <ComboBox x:Name="MotorComboBox" SelectedIndex="0" HorizontalContentAlignment="Center" Margin="0, 10, 0, 10">
                <ComboBoxItem Content="Light Motor"/>
                <ComboBoxItem Content="Middle Motor"/>
                <ComboBoxItem Content="Heavy Motor"/>
            </ComboBox>

            <ListBox x:Name="RocketSysListBox" Margin="0, 0, 0, 10">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True" HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <CheckBox x:Name="AverageCheckBox" Content="Average Rocket System"/>
                <CheckBox x:Name="AdvancedCheckBox" Content="Advanced Rocket System"/>
                <CheckBox x:Name="ExtendedCheckBox" Content="Extended Rocket System"/>
            </ListBox>

            <ComboBox x:Name="NavigationSysComboBox" SelectedIndex="0" HorizontalContentAlignment="Center" Margin="0, 0, 0, 10">
                <ComboBoxItem Content="Light Navigation System"/>
                <ComboBoxItem Content="Middle Navigation System"/>
                <ComboBoxItem Content="Heavy Navigation System"/>
            </ComboBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                
                <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0, 0, 10, 0">
                    <CheckBox x:Name="RearPropellerCheckBox" Content="Rear Propeller"/>
                    <CheckBox x:Name="PowerPlantCheckBox" Content="Power Plant" Margin="0, 10, 0, 10"/>
                    <CheckBox x:Name="CompressedAirBottleCheckBox" Content="Compressed air bottle"/>
                </StackPanel>

                <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <CheckBox x:Name="AdditionalCrewCheckBox" Content="Additional Crew"/>
                    <CheckBox x:Name="AdditionalRepairmentCheckBox" Content="Additional repairmen" Margin="0, 10, 0, 10"/>
                    <CheckBox x:Name="AdditionalCommanderCheckBox" Content="Additional commander"/>
                </StackPanel>

            </StackPanel>

            <Button x:Name="AddDetailButton" Content="Add Details" Click="AddDetailButton_Click"/>
            <Button x:Name="PrintButton" Content="Show Submarine" Margin="0, 10, 0, 0" Click="PrintButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
