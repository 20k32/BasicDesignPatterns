<Window x:Class="FabricMethodCaffee.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FabricMethodCaffee"
        mc:Ignorable="d"
        Title="MainWindow" WindowStartupLocation="CenterScreen" 
        FontFamily="JetBrains Mono" 
        FontSize="16"
        Width="1400"
        Height="1000"
        ResizeMode="NoResize">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBox x:Name="EvoTextBox" TextWrapping="Wrap" MinHeight="300" MinWidth="600"/>
        <Button Content="Show HumanEvolution" Click="Button_Click"/>

    </StackPanel>
</Window>
