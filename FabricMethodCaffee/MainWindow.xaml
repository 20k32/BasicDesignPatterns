<Window x:Class="FabricMethodCaffee.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FabricMethodCaffee"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" MinHeight="460" Width="1000" FontFamily="JetBrains Mono" FontSize="16" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button">
            <Style.Setters>
                <Setter Property="Margin" Value="10"/>
                <Setter Property="Padding" Value="10"/>
            </Style.Setters>
        </Style>
        <Style TargetType="TextBox">
            <Style.Setters>
                <Setter Property="Margin" Value="10"/>
                <Setter Property="Padding" Value="10"/>
            </Style.Setters>
        </Style>
    </Window.Resources>
    <Grid MaxWidth="1000" Height="500" MaxHeight="600" VerticalAlignment="Center" Margin="10" Background="Gainsboro">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock x:Name="OrderTextBlock" Text="Your order will be here!" Background="Bisque" TextAlignment="Center"/>
            <TextBlock x:Name="CaffeeTextBlock" Text="The caffe that created your order will be here!" Margin="0, 0, 0, 20" Background="Bisque" TextAlignment="Center"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Header="EspressoCafe" Grid.Row="0" Grid.Column="0">
                <StackPanel>
                    <TextBox x:Name="EspressoCafeTextBox"/>
                    <Button x:Name="EspressoCafeButton" Content="Request Espresso" Click="EspressoCafeButton_Click"/>
                </StackPanel>
                
            </GroupBox>
            <GroupBox Header="LatteCafe" Grid.Row="0" Grid.Column="1">
                <StackPanel>
                    <TextBox x:Name="LatteCafeTextBox"/>
                    <Button x:Name="LatteCafeButton" Content="Request Latte" Click="LatteCafeButton_Click"/>
                </StackPanel>
            </GroupBox>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Header="AmericanoCafe" Grid.Row="0" Grid.Column="0">
                <StackPanel>
                    <TextBox x:Name="AmericanoCafeTextBox"/>
                    <Button x:Name="AmericanoCafeButton" Content="Request Americano" Click="AmericanoCafeButton_Click"/>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="CappucinoCafe" Grid.Row="0" Grid.Column="1">
                <StackPanel>
                    <TextBox x:Name="CappucinoCafeTextBox"/>
                    <Button x:Name="CappucinoCafeButton" Content="Request Cappuccino" Click="CappucinoCafeButton_Click"/>
                </StackPanel>
            </GroupBox>
        </Grid>

        <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Center">
            <Button x:Name="MakceCoffeeButton" Content="MakeCoffe" Padding="10" Margin="10" Click="MakeCoffeeButton_Click"/>
            <Button x:Name="DrinkCoffeeButton" Content="DrinkCoffe" Padding="10" Margin="10" Click="DrinkCoffeeButton_Click" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>
