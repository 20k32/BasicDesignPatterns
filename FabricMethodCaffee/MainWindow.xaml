<Window x:Class="FabricMethodCaffee.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FabricMethodCaffee"
        mc:Ignorable="d"
        Title="MainWindow" WindowStartupLocation="CenterScreen" MinHeight="500" MinWidth="800" FontFamily="JetBrains Mono" FontSize="16">
    <Grid x:Name="ComponentGrid" HorizontalAlignment="Center" Height="{Binding ElementName=ComponentPanel, Path=ActualHeight}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="ComponentPanel" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10, 0, 0, 0">
            <TextBlock Text="Select Motherborad:"/>
            <ComboBox x:Name="MotherbroadBox"/>

            <TextBlock Text="Select Processor:"/>
            <ComboBox x:Name="ProcessorBox"/>

            <TextBlock Text="Select Power Supply Unit:"/>
            <ComboBox x:Name="PowerSupplyUnitBox"/>

            <TextBlock Text="Select RAM:"/>
            <ComboBox x:Name="RAMBox"/>

            <TextBlock Text="Select ROM:"/>
            <ComboBox x:Name="ROMBox"/>

            <TextBlock Text="Select System Unit:"/>
            <ComboBox x:Name="SystemUnitBox"/>

            <TextBlock Text="Select Video Card:"/>
            <ComboBox x:Name="VideoCardBox"/>

            <TextBlock Text="Select Cooling System:"/>
            <ComboBox x:Name="CoolingSystemBox"/>
            
            <Button x:Name="BuildButton" Content="BUILD" Margin="0, 10, 0 , 0" VerticalAlignment="Center" Height="60" Click="BuildButton_Click"/>
        </StackPanel>
        <StackPanel Grid.Column="1" MinWidth="500" Margin="20, 0, 0, 0">
            <TextBox x:Name="LogTextBox" Height="386" TextWrapping="Wrap" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Content="Get Order" Height="{Binding ElementName=BuildButton, Path=ActualHeight}"  Margin="0, 10, 0 , 0" Click="Button_Click" Grid.Column="0"/>
                <Button x:Name="ClearButton" Content="Clear" Height="{Binding ElementName=BuildButton, Path=ActualHeight}"  Margin="10, 10, 0, 0" Click="ClearButton_Click" Grid.Column="1"/>
                <Button x:Name="CloneButton" Content="Clone Order" Height="{Binding ElementName=BuildButton, Path=ActualHeight}"  Margin="10, 10, 10, 0" Click="CloneButton_Click" Grid.Column="2"/>
                <Button x:Name="PrintButton" Content="Print Cloned Order" Height="{Binding ElementName=BuildButton, Path=ActualHeight}"  Margin="0, 10, 0, 0" Click="PrintButton_Click" Grid.Column="3"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
