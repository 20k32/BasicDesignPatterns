<Window x:Class="FabricMethodCaffee.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FabricMethodCaffee"
        mc:Ignorable="d"
        Title="MainWindow" WindowStartupLocation="CenterScreen" 
        FontFamily="JetBrains Mono" 
        FontSize="50"
        Width="1400"
        Height="1000"
        ResizeMode="NoResize"
        Background="LightSlateGray">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="FontSize" Value="70"/>
        </Style>
    </Window.Resources>
    
    <StackPanel x:Name="MainPanel" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBox x:Name="OperationTextBox" TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Auto" Height="358" Width="600"/>
        <Grid Margin="0, 10, 0, 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="1">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0, 0, 10, 0">
                    <Button x:Name="DeleteLastCharButton" Content="x" Click="DeleteLastCharButton_Click"/>
                    <Button x:Name="AdditionButton" Content="+" VerticalContentAlignment="Top" Click="AdditionButton_Click" Margin="0, 10, 0, 10" />
                    <Button x:Name="SubtractionButton" Content="-" VerticalContentAlignment="Top" Click="SubtractionButton_Click"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Button x:Name="DivisionButton" Content="/" VerticalContentAlignment="Top" Click="DivisionButton_Click"/>
                    <Button x:Name="MultiplicationButton" Content="*" VerticalContentAlignment="Top" Margin="0, 10, 0, 10" Click="MultiplicationButton_Click"/>
                    <Button x:Name="EqualsButton" Content="=" VerticalAlignment="Bottom" Click="EqualsButton_Click"/>
                </StackPanel>

            </StackPanel>

            <StackPanel Orientation="Vertical" VerticalAlignment="Center" Grid.Column="0" HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 0, 0, 10">
                    <Button Content="1" Click="Button_Click"/>
                    <Button Content="2" Margin="10, 0, 10, 0" Click="Button_Click"/>
                    <Button Content="3" Click="Button_Click"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 0, 0, 10">
                    <Button Content="4" Click="Button_Click"/>
                    <Button Content="5" Margin="10, 0, 10, 0" Click="Button_Click"/>
                    <Button Content="6" Click="Button_Click"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 0, 0, 10">
                    <Button Content="7" Click="Button_Click"/>
                    <Button Content="8" Margin="10, 0, 10, 0" Click="Button_Click"/>
                    <Button Content="9" Click="Button_Click"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 0, 0, 10">
                    <Button Content="0" Click="Button_Click"/>
                    <Button Content="," Margin="10, 0, 10, 0" Click="Button_Click"/>
                    <Button x:Name="EraseButton" Content="C" Click="EraseButton_Click" />
                </StackPanel>
            </StackPanel>
            

        </Grid>
        
    </StackPanel>
</Window>
