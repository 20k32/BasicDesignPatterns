<Window x:Class="FabricMethodCaffee.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FabricMethodCaffee"
        mc:Ignorable="d"
        Title="MainWindow" WindowStartupLocation="CenterScreen" 
        FontFamily="JetBrains Mono" 
        FontSize="16" MinWidth="850"
        MinHeight="390"
        Background="DimGray">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ListBox x:Name="ContentListBox" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top">
            <RadioButton x:Name="BinRadioButton"  Content="to bin" Click="BinRadioButton_Click"/>
            <RadioButton x:Name="TxtRadioButton"  Content="to txt" Click="TxtRadioButton_Click"/>
            <RadioButton x:Name="JsonRadioButton" Content="to json" Click="JsonRadioButton_Click"/>
            <RadioButton x:Name="XamlRadioButton" Content="to xml" Click="XamlRadioButton_Click"/>
        </ListBox>
        
        <StackPanel x:Name="MainStackPanel" Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="50, 0, 50, 0" Width="700">
            <TextBox x:Name="SomeTextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="{Binding ElementName=MainStackPanel, Path=Width}" Height="300"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0, 10, 0, 0">
                <Button x:Name="ClearButton" Content="Clear" Click="ClearButton_Click" Margin="0, 0, 10, 0"  Width="180"/>
                <StackPanel Orientation="Vertical" VerticalAlignment="Center" Width="180">
                    <Button x:Name="SaveButton" Content="Save" Click="SaveButton_Click" MaxHeight="50" Margin="0, 0, 0, 10"/>
                    <Button x:Name="LoadBinButton" Content="Load" Click="LoadButton_Click" MaxHeight="50"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
    
</Window>
